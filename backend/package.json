{
  "name": "github-value-backend",
  "version": "1.0.0",
  "description": "Demonstrate the value of GitHub",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "start": "node --enable-source-maps dist/index.js | bunyan -o short -l info",
    "test": "vitest",
    "build": "tsc",
    "dev": "tsx watch src/index.ts | bunyan -o short -l info",
    "lint": "eslint src/**/*.ts",
    "compose:start": "docker-compose -f ../compose.yml up -d",
    "db:start": "docker-compose -f ../compose.yml up -d mongo",
    "dotenv": "cp -n .env.example .env || true"
  },
  "dependencies": {
    "bunyan": "^1.8.15",
    "cors": "^2.8.5",
    "cron": "^3.2.1",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.5",
    "eventsource": "^2.0.2",
    "express": "^4.21.2",
    "express-rate-limit": "^7.4.1",
    "mongoose": "^8.9.5",
    "mysql2": "^3.11.4",
    "octokit": "4.1",
    "smee-client": "^2.0.4",
    "update-dotenv": "^1.1.1",
    "validator": "^13.12.0",
    "why-is-node-running": "^3.2.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/bunyan": "^1.8.11",
    "@types/cors": "^2.8.17",
    "@types/eventsource": "^1.1.15",
    "@types/express": "^5.0.0",
    "@types/node": "^22.13.10",
    "@types/validator": "^13.12.2",
    "eslint": "9.22",
    "globals": "^16.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.1",
    "vitest": "^3.0.8"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "MIT"
}
