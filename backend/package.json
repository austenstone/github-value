{
  "name": "github-value-backend",
  "version": "1.0.0",
  "type": "module",
  "description": "Demonstrate the value of GitHub",
  "main": "src/index.ts",
  "scripts": {
    "start": "node --enable-source-maps dist/index.js | bunyan -o short -l info",
    "test": "vitest",
    "build": "tsc",
    "dev": "tsx watch src/index.ts | bunyan -o short -l info",
    "lint": "eslint src/**/*.ts",
    "compose:start": "docker-compose -f ../compose.yml up -d",
    "db:start": "docker-compose -f ../compose.yml up -d mongo",
    "dotenv": "cp -n .env.example .env || true"
  },
  "dependencies": {
    "@octokit/core": "^6.1.4",
    "bunyan": "^1.8.15",
    "cors": "^2.8.5",
    "cron": "^4.1.3",
    "date-fns": "^4.1.0",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.7",
    "eventsource": "^3.0.6",
    "express": "^4.21.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.5.0",
    "mongoose": "^8.13.2",
    "mysql2": "^3.14.0",
    "octokit": "^4.1.2",
    "smee-client": "^3.1.1",
    "update-dotenv": "^1.1.1",
    "validator": "^13.15.0",
    "why-is-node-running": "^3.2.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@octokit/types": "^14.1.0",
    "@types/bunyan": "^1.8.11",
    "@types/cors": "^2.8.19",
    "@types/eventsource": "^3.0.0",
    "@types/express": "^4.17.21",
    "@types/node": "^24.2.0",
    "@types/validator": "^13.15.0",
    "eslint": "9.32",
    "globals": "^16.3.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "MIT"
}
